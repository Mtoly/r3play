{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": "../",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["./**/*.ts", "../shared/**/*.ts", "./**/unlock.js", "main/lyrics.tsx","main/lyricsWindow.tsx"]
}
