{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "post-install": {
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ],
      "cache": false
    },
    "pack": {
      "outputs": [
        "release/**"
      ],
      "cache": false
    },
    "pack:test": {
      "outputs": [
        "release/**"
      ],
      "cache": false
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "outputs": []
    }
  }
}
